@using CosmeticClinicManagement.Services.Interfaces
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Badge
@inject IDoctorDashboardAppService DoctorDashboardAppService

@{
    var dashboard = await DoctorDashboardAppService.GetDoctorDashboardAsync();
}

<abp-page-header>
    <abp-page-header-title>
        <h2><i class="fas fa-user-md"></i> Welcome, Dr. @dashboard.DoctorName</h2>
    </abp-page-header-title>
</abp-page-header>

<abp-card>
    <abp-card-body>
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <abp-card class="border-left-primary shadow h-100">
                    <abp-card-body>
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Today's Sessions
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @dashboard.TodaySessionsCount
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <abp-card class="border-left-success shadow h-100">
                    <abp-card-body>
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Completed Sessions
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @dashboard.CompletedSessionsCount
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <abp-card class="border-left-warning shadow h-100">
                    <abp-card-body>
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Pending Sessions
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @dashboard.PlannedSessionsCount
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <abp-card class="border-left-info shadow h-100">
                    <abp-card-body>
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Total Patients
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @dashboard.PatientsCount
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>
        </div>

        <!-- Today's Sessions Table -->
        <div class="row mt-4">
            <div class="col-12">
                <abp-card>
                    <abp-card-header>
                        <abp-card-title>
                            <i class="fas fa-list-alt"></i> Today's Sessions
                        </abp-card-title>
                    </abp-card-header>
                    <abp-card-body>
                        @if (dashboard.TodaySessionsSummary.Any())
                        {
                            <abp-table hoverable-rows="true" responsive-sm="true" striped="true">
                                <thead>
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Age</th>
                                        <th>Status</th>
                                        <th>Session Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in dashboard.TodaySessionsSummary)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@session.PatientName</strong>
                                            </td>
                                            <td>@session.PatientAge years</td>
                                            <td>
                                                @{
                                                    var badgeClass = session.SessionStatus.ToString() switch
                                                    {
                                                        "Completed" => AbpBadgeType.Success,
                                                        "InProgress" => AbpBadgeType.Primary,
                                                        "Planned" => AbpBadgeType.Info,
                                                        "Cancelled" => AbpBadgeType.Danger,
                                                        _ => AbpBadgeType.Secondary
                                                    };
                                                }
                                                <span abp-badge-pill=@badgeClass>@session.SessionStatus</span>
                                            </td>
                                            <td>
                                                @if (session.SessionNotes.Any())
                                                {
                                                    <ul class="list-unstyled mb-0">
                                                        @foreach (var note in session.SessionNotes)
                                                        {
                                                            <li><i class="fas fa-sticky-note text-muted"></i> @note</li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No notes</span>
                                                }
                                            </td>
                                            <td>
                                                <abp-button button-type="Primary" size="Small" icon="fas fa-eye" text="View" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </abp-table>
                        }
                        else
                        {
                            <abp-alert alert-type="Info" dismissible="false">
                                <i class="fas fa-info-circle"></i> No sessions scheduled for today.
                            </abp-alert>
                        }
                    </abp-card-body>
                </abp-card>
            </div>
        </div>
    </abp-card-body>
</abp-card>

@section scripts {
    <abp-script src="/Pages/DoctorDashboard.js" />
}

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .text-xs {
        font-size: 0.7rem;
    }
</style>